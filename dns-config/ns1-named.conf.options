acl "trusted-ns" {
	12.0.2.2;
};

options {
	directory "/var/cache/bind";

	dnssec-enable no;

	dnssec-validation no;

	empty-zones-enable yes;

	recursion yes;

	allow-recursion {
		any;
	};

	allow-query {
		any;
	};

	allow-transfer {
		trusted-ns;
	};

	forwarders {
		10.2.2.1;
	};

	listen-on-v6 {
		any;
	};
};
